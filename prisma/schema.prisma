generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

//////////////////////////////////////
// ENUMS
//////////////////////////////////////

enum UserRole {
  ADMIN
  USER
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELLED
}

enum Role {
  PERSON
  AI
}

//////////////////////////////////////
// USER & AUTH
//////////////////////////////////////

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  name            String?
  image           String?
  password        String?
  role            UserRole @default(USER)
  subscriptionTag String   @default("FREE")
  dateOfBirth    DateTime?
  phoneNumber    String?
  bio            String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  histories    History[]
  subscription Subscription[]
  AddressInfo AddressInfo[]
}

//////////////////////////////////////
// USER ACTIVITY / AUDIT LOG
//////////////////////////////////////

model History {
  id        String   @id @default(cuid())
  userId    String
  createdAt DateTime @default(now())

  messages Message[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Message {
  id        String   @id @default(cuid())
  historyId String
  role      Role
  content   String
  createdAt DateTime @default(now())

  history History @relation(fields: [historyId], references: [id], onDelete: Cascade)

  @@index([historyId, createdAt])
}

//////////////////////////////////////
// SUBSCRIPTION MASTER
//////////////////////////////////////

model SubscriptionPlan {
  id        String   @id @default(cuid())
  name      String
  price     Float
  features  String[]
  duration  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // isRecommended Boolean  @default(false)

  subscriptions Subscription[]
}

//////////////////////////////////////
// USER SUBSCRIPTION
//////////////////////////////////////

model Subscription {
  id        String             @id @default(cuid())
  userId    String
  planId    String
  status    SubscriptionStatus @default(ACTIVE)
  startDate DateTime
  endDate   DateTime
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  user User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan SubscriptionPlan @relation(fields: [planId], references: [id])
}

//////////////////////////////////////
// COLLABORATION / PROJECT
//////////////////////////////////////

model Collaboration {
  id          String   @id @default(cuid())
  userId      String
  userEmail   String
  title       String
  description String?
  budget      Float
  timeline    DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

//////////////////////////////////////
// ADDRESS INFORMATION
//////////////////////////////////////

model AddressInfo {
  id        String   @id @default(cuid())
  userId    String
  city      String
  state     String
  zipCode   String
  country   String
  Address1  String
  Address2  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
