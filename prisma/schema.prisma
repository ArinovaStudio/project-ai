generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

//////////////////////////////////////
// ENUMS
//////////////////////////////////////

enum UserRole {
  ADMIN
  USER
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELLED
}

//////////////////////////////////////
// USER & AUTH
//////////////////////////////////////

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  name            String?
  image           String?
  password        String?
  role            UserRole @default(USER)
  subscriptionTag String   @default("FREE")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  histories     History[]
  subscription Subscription[]
}

//////////////////////////////////////
// USER ACTIVITY / AUDIT LOG
//////////////////////////////////////

model History {
  id        String   @id @default(cuid())
  userId    String
  action    String
  metadata  Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

//////////////////////////////////////
// SUBSCRIPTION MASTER
//////////////////////////////////////

model SubscriptionPlan {
  id        String   @id @default(cuid())
  name      String
  price     Float
  features  String[]
  duration  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subscriptions Subscription[]
}

//////////////////////////////////////
// USER SUBSCRIPTION
//////////////////////////////////////

model Subscription {
  id        String              @id @default(cuid())
  userId    String
  planId    String
  status    SubscriptionStatus @default(ACTIVE)
  startDate DateTime
  endDate   DateTime
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt

  user User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan SubscriptionPlan @relation(fields: [planId], references: [id])
}

//////////////////////////////////////
// COLLABORATION / PROJECT
//////////////////////////////////////

model Collaboration {
  id          String   @id @default(cuid())
  title       String
  description String?
  budget      Float
  timeline    DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
